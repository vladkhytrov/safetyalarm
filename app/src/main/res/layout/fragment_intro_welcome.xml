<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/intro_title"
            style="@style/introTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xl"
            android:gravity="center_horizontal"
            android:text="Welcome to petaSOS 飛甲" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/welcome_subtitle"
            style="@style/introSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_l"
            android:text="Choose your language" />

        <LinearLayout
            android:id="@+id/intro_layout_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_eng"
                android:layout_width="@dimen/intro_lang_size"
                android:layout_height="@dimen/intro_lang_size"
                android:src="@drawable/eng_on" />

            <ImageView
                android:id="@+id/img_ch_tr"
                android:layout_width="@dimen/intro_lang_size"
                android:layout_height="@dimen/intro_lang_size"
                android:layout_marginStart="@dimen/margin_l"
                android:src="@drawable/tchin_off" />

            <ImageView
                android:id="@+id/img_ch_sim"
                android:layout_width="@dimen/intro_lang_size"
                android:layout_height="@dimen/intro_lang_size"
                android:layout_marginStart="@dimen/margin_l"
                android:src="@drawable/schin_off" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>