<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Fullscreen theme for SplashActivity. -->
    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ButtonPrimary">
        <item name="cornerRadius">16dp</item>
<!--        <item name="android:textSize">16sp</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonSecondary">
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_secondary</item>
        <item name="backgroundTint">@color/btn_secondary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonLang">
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/purple_light</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="styleSubtitle1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="styleSubtitle2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_subtitle_2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="styleBody1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_body_1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="styleBody2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_body_2</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
